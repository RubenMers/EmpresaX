@model ML.Producto
@{
    ViewBag.Title = "Form";
}

<h2>Form</h2>
<h2>Agregar Producto</h2>


@using (Html.BeginForm("Form", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row">
        <div class="col" hidden>
            @Html.LabelFor(Model => Model.IdProducto)
        </div>
        <div class="col" hidden>
            @Html.TextBoxFor(Model => Model.IdProducto)
        </div>
    </div>

    <div class="list-group">
         <div class="col">
                @Html.LabelFor(Model => Model.Nombre)
            </div>
            <div class="col">
                @Html.TextBoxFor(Model => Model.Nombre, new { @class="form-control",placeholder = "Ingresa el Nombre" })
                @Html.ValidationMessageFor(Model => Model.Nombre)
            </div>
            <div class="col">
                @Html.LabelFor(Model => Model.CodigoDeBarras)
            </div>
            <div class="col">
                @Html.TextBoxFor(Model => Model.CodigoDeBarras, new { @class="form-control",placeholder = "Ingresa el codigo de barras" })
                @Html.ValidationMessageFor(Model => Model.CodigoDeBarras)
            </div>

            <div class="col">
                @Html.LabelFor(Model => Model.Cantidad)
            </div>
            <div class="col">
                @Html.TextBoxFor(Model => Model.Cantidad, new {@class="form-control", placeholder = "Cantidad" })
                @Html.ValidationMessageFor(Model => Model.Cantidad)
            </div>
            <div class="col">
                @Html.LabelFor(Model => Model.PrecioUnitario)
            </div>
            <div class="col">
                @Html.TextBoxFor(Model => Model.PrecioUnitario, new { @class="form-control",placeholder = "Cantidad" })
                @Html.ValidationMessageFor(Model => Model.PrecioUnitario)
            </div>





        <div class="card mb-8" style="max-width: 540px;">
            <div class="row no-gutters">
                <div class="col-md-4" style="border:3px;border-color:black">
                    <img id="Imagen" src="#" alt="Imagen" style="height:190px;width:190px" />
                </div>
                <div class="col-md-8">
                    <div class="card-body">

                        <p class="card-text">
                            @Html.LabelFor(Model => Model.LogoTipo)
                        </p>

                        <form enctype="multipart/form-data">

                            <input type="file" name="Imagen" onchange="readURL(this);">
                        </form>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="align-content-center">
                    <input type="submit" name="Upload" value="@ViewBag.Accion" class="btn btn-success" />
                    @Html.ActionLink("Cancelar", "GetAll", "Equipo", htmlAttributes: new { @class = "btn btn-danger", })
                </div>
            </div>
        </div>
           





        
    </div>

}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

<script>
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#Imagen').attr('src', e.target.result);
            };
            reader.readAsDataURL(input.files[0]);
        }
    }
</script>