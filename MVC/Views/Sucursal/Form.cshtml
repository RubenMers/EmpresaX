@model ML.Sucursal
    ViewBag.Title = "Form";
}

<h2>Increment</h2>

<div class="container">
    <div class="row">
        <div class="col">
            @using (Html.BeginForm("Form", "Sucursal", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {

                <div class="form-group">
                    <div class="row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.IdSucursal, new { @class = "control-label col-md-2" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.IdSucursal, new { @class = "form-control", @readonly = true })
                            @Html.ValidationMessageFor(model => model.IdSucursal)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.LabelFor(model => model.Nombre, new { @class = "control-label" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "form-control", placeholder = "Ingresar nombre" })
                            @Html.ValidationMessageFor(model => model.Nombre)
                        </div>
                    </div>

                </div>
                <div class="form-group">
                    <div class="align-content-center">
                        <input type="submit" name="Upload" value="@ViewBag.Accion" class="btn btn-success" />
                        @Html.ActionLink("Cancelar", "GetAll", "Sucursal", htmlAttributes: new { @class = "btn btn-danger", })
                    </div>
                </div>
            }
        </div>
    </div>
</div>
